
<p id="notice"><%= notice %></p>
<ul>
  <li ><%= link_to 'Home', root_path %></li>
</ul><br>

<table class="table table-hover table-bordered">
  <thead class="lead">
    <tr>
      <th>Chef da Receita</th>
      <th>Categoria</th>
      <th>Titulo</th>
      <th>Ingredientes</th>
      <th>Modo de fazer</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cookbooks.each do |cookbook| %>
      <tr>
        <td><%= cookbook.chef %></td>
        <td><%= cookbook.category %></td>
        <td><%= cookbook.title %></td>
        <td><%= cookbook.ingredients %></td>
        <td><%= cookbook.description %></td>
        <td><%= cookbook.avatar %></td>
        <td><%= link_to 'Show', cookbook %></td>
        <td><%= link_to 'Edit', edit_cookbook_path(cookbook) %></td>
        <td><%= link_to 'Destroy', cookbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= link_to 'New Cookbook', new_cookbook_path %>
